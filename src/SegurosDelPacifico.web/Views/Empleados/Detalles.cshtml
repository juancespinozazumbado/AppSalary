@using Models.Domain;
@model Empleado;


@{
    ViewData["Title"] = $"Empleado/{@Model.Id}";
}



<a type="button" class="btn btn-outline-primary" asp-action="AgregarSalario" asp-route-id="@Model.Id"><i
        class="bi bi-plus-square"></i> Agregar salario</a>
@* <i class="bi bi-plus-square"></i> @Html.ActionLink("Salario", "AgregarSalario", new { id = Model.Id }, new { @class =
"btn btn-warning" }) *@
<br />

<div class="col-lg-6 mb-5">

    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SalarioBase)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SalarioBase)
        </dd>


    </dl>
</div>



<div class="container-fluid">
    <table class="table table-striped table-sm">
        <thead>
            <tr>

                <th scope="col">Fecha</th>
                <th scope="col">Horas</th>
                <th scope="col">Horas Extra</th>
                <th scope="col">Sal Bruto</th>
                <th scope="col">% Deuc</th>
                <th scope="col">Deduciones</th>
                <th scope="col">Sal Neto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var salario in Model.Salarios)
            {
                <tr>

                    <td>@Html.DisplayFor(modelItem => @salario.FechaSalario)</td>
                    <td>@Html.DisplayFor(modelItem => @salario.Horas)</td>
                    <td>@Html.DisplayFor(modelItem => @salario.HorasExtra)</td>
                    <td>@Html.DisplayFor(modelItem => @salario.SalarioBruto)</td>
                    <td>@Html.DisplayFor(modelItem => @salario.PorcentajeDeduciones)</td>
                    <td>@Html.DisplayFor(modelItem => @salario.MontoDeduciones)</td>
                    <td>@Html.DisplayFor(modelItem => @salario.SalarioNeto)</td>
                    <td>

                </tr>
            }
        </tbody>
    </table>
</div>


<div>
    @* @Html.ActionLink("Index", "Index", new { id = Model.Id }, new { @class = "btn btn-warning" }) | *@
    <a style="margin-block:20px;" class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-left-square-fill"></i> Volver </a>
</div>
